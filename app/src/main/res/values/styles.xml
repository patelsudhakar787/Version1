<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="your_own_name" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="edittext" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/main_grey</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>

    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@color/white</item>
    </style>

</resources>
